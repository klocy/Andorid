<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".ExtendActivity">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대여 연장"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:id="@+id/toolbar_title"
        android:textSize="20sp"/>
    </android.support.v7.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="60dp"
        android:text="자전거 대여 시간을 연장합니다.\n원하는 종료시간을 입력해주세요."
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:lineSpacingExtra="15dip"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <TextView
            android:id="@+id/extend_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="연장 날짜"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />


        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/extend_date"
            android:background="#000000" />

        <TextView
            android:id="@+id/extend_year"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/extend_date"
            android:layout_toStartOf="@+id/yearUp_e"
            android:gravity="center"
            android:text="2017"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/yearUp_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_below="@+id/extend_date"
            android:layout_toStartOf="@+id/year"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_up" />

        <ImageButton
            android:id="@+id/yearDown_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/extend_year"
            android:layout_alignStart="@+id/yearUp_e"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_down" />

        <TextView
            android:id="@+id/year"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_above="@+id/extend_time"
            android:layout_toStartOf="@+id/extend_month"
            android:gravity="center"
            android:text="년"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/extend_month"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_below="@+id/extend_date"
            android:layout_toStartOf="@+id/monthUp_e"
            android:gravity="center"
            android:text="8"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/monthUp_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_below="@+id/extend_date"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_up" />

        <ImageButton
            android:id="@+id/monthDown_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/extend_year"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_down" />

        <TextView
            android:id="@+id/month"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider6"
            android:layout_toEndOf="@+id/monthDown_e"
            android:gravity="center"
            android:text="월"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/extend_day"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider6"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/month"
            android:gravity="center"
            android:text="13"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/dayUp_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/divider6"
            android:layout_toEndOf="@+id/extend_day"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_up" />

        <ImageButton
            android:id="@+id/dayDown_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/year"
            android:layout_below="@id/dayUp"
            android:layout_toEndOf="@+id/extend_day"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_down" />

        <TextView
            android:id="@+id/day"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/divider6"
            android:layout_toEndOf="@+id/dayDown_e"
            android:gravity="center"
            android:text="일"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/minute"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_below="@+id/extend_time"
            android:layout_toEndOf="@+id/minuteUp_e"
            android:gravity="center"
            android:text="분"
            android:textColor="#000000"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/extend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/extend_year"
            android:padding="10dp"
            android:text="연장 시간"
            android:textColor="#000000"
            android:textSize="18dp" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/extend_time"
            android:background="#000000" />

        <TextView
            android:id="@+id/extend_hour"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/extend_time"
            android:layout_below="@+id/extend_time"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="10"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/hourUp_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/extend_time"
            android:layout_toEndOf="@+id/extend_time"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_up" />

        <ImageButton
            android:id="@+id/hourDown_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/hourUp_e"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/hourUp_e"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_down" />


        <TextView
            android:id="@+id/hour"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_below="@+id/extend_time"
            android:layout_toEndOf="@+id/hourUp_e"
            android:gravity="center"
            android:text="시"
            android:textColor="#000000"
            android:textSize="50dp" />


        <TextView
            android:id="@+id/extend_minute"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_below="@+id/extend_time"
            android:layout_toStartOf="@+id/extend"
            android:gravity="center"
            android:text="10"
            android:textColor="#000000"
            android:textSize="50dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/minuteUp_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/extend_time"
            android:layout_toEndOf="@+id/extend_minute"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_up" />

        <ImageButton
            android:id="@+id/minuteDown_e"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/extend_hour"
            android:layout_toEndOf="@+id/extend_minute"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_down" />


        <ImageButton
            android:id="@+id/extend"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/extend_hour"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/btn_ok" />

    </RelativeLayout>

</LinearLayout>