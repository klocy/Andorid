<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_background"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_main_logo" />

    <ImageButton
        android:id="@+id/create"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="250dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_info" />

    <ImageButton
        android:id="@+id/book"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/create"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_book" />


    <ImageButton
        android:id="@+id/rental"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/create"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btn_rental" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="#70AD47"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/existing_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#70AD47"
            android:textSize="16dp"
            android:text="자전거 예약 현황"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/existing_booking"
            android:layout_marginTop="15dp"
            android:background="#70AD47"
            android:textSize="16dp"
            android:text="1. 2018년 8월 10일 17:00~18:30 서울역 대여소"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/existing_booking"
            android:layout_marginTop="15dp"
            android:background="#70AD47"
            android:textSize="16dp"
            android:text="2. 2018년 8월 11일 12:00~15:00 신촌역 대여소"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/ic_klocy" />

</RelativeLayout>
