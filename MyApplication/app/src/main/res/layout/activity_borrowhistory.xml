                <View
                    android:id="@+id/his_div9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/okButton"
                    android:background="#000000" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>
